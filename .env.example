# =================================
# WISETRADE - Environment Variables
# =================================

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=WiseTrade
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
# NEXT_PUBLIC_API_BASE_URL=https://api.wisetrade.com

# API Timeout (in milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# Authentication
NEXT_PUBLIC_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
NEXT_PUBLIC_TOKEN_EXPIRY=7d
NEXT_PUBLIC_REFRESH_TOKEN_EXPIRY=30d

# Database (if using server-side)
DATABASE_URL=postgresql://user:password@localhost:5432/wisetrade
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Service (e.g., SendGrid, AWS SES)
EMAIL_SERVICE=sendgrid
EMAIL_FROM=noreply@wisetrade.com
SENDGRID_API_KEY=your-sendgrid-api-key

# AWS Configuration (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=wisetrade-uploads

# Trading API Integration
TRADING_API_BASE_URL=https://api.trading-provider.com
TRADING_API_KEY=your-trading-api-key
TRADING_API_SECRET=your-trading-api-secret

# Market Data Provider
MARKET_DATA_API_KEY=your-market-data-api-key
MARKET_DATA_WEBSOCKET_URL=wss://stream.marketdata.com

# Analytics & Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Feature Flags
NEXT_PUBLIC_ENABLE_DEMO_MODE=true
NEXT_PUBLIC_ENABLE_WEBSOCKET=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Payment Gateway (if applicable)
STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Social Auth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3001
WEBSOCKET_PING_INTERVAL=30000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Security
CORS_ORIGIN=http://localhost:3000
CSRF_SECRET=your-csrf-secret-key
SESSION_SECRET=your-session-secret-key

# Development Tools
NEXT_PUBLIC_DEV_TOOLS=true
NEXT_PUBLIC_MOCK_API=false
